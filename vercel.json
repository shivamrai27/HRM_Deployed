const allowedOrigins = [
  'http://localhost:3000',
  process.env.FRONTEND_URL || 'https://hrm-deployed-9hq5.vercel.app', // Use environment variable for production
];

app.use(cors({
  origin: (origin, callback) => {
    if (!origin || allowedOrigins.includes(origin)) {
      callback(null, true);
    } else {
      callback(new Error('Not allowed by CORS'));
    }
  },
  credentials: true,
}));
